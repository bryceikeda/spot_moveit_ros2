 <root BTCPP_format="4" >
     <BehaviorTree ID="PathConstrainedMovement">
        <Sequence name="root">
            <AddRosNodeToBlackboard topic_name="node_to_blackboard"/>
            <SetupMoveGroup             planning_group_name="arm" move_group="{move_group}"/>
            <SetupVisualTools           move_group="{move_group}" base_frame="body" visual_tools_topic="moveit_visual_tools" visual_tools="{visual_tools}"/>
            <SubTree    ID="TemplateMoveToNamedTarget"
                        move_group="{move_group}"
                        target_name="stow"
                        visual_tools="{visual_tools}"
            />
            <SubTree    ID="TemplateMoveToPose"
                        move_group="{move_group}"
                        position_xyz=".4;0.15;0.4"
                        orientation_xyzw="0;0;0;1"
                        reference_frame="body"
                        visual_tools="{visual_tools}"
            />
            <InitializeMotionConstraints constraints="{constriants}"/>
            <AppendOrientationConstraint constraints="{constriants}" tolerance_xyz="0.3;0.3;0.3" link_name="arm_link_wr1" frame_id="body" orientation_xyzw="0;0;0;1" weight="1.0"/>
            <SetMoveItPlanningTime       move_group="{move_group}" seconds="15.0"/>
            <SubTree    ID="TemplateMoveToPose"
                        move_group="{move_group}"
                        position_xyz=".4;-0.15;0.6"
                        orientation_xyzw="0;0;0;1"
                        reference_frame="body"
                        visual_tools="{visual_tools}"
            />
            <ClearMarkers visual_tools="{visual_tools}"/>
        </Sequence>
     </BehaviorTree>
 </root>